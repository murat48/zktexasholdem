# Stellar Network Configuration
NEXT_PUBLIC_STELLAR_NETWORK=testnet
NEXT_PUBLIC_STELLAR_RPC=https://soroban-testnet.stellar.org

# Deployed Contract Addresses
# Replace these with your deployed contract IDs
NEXT_PUBLIC_GAME_HUB_CONTRACT=CB4VZAT2U3UC6XFK3N23SKRF2NDCMP3QHJYMCHHFMZO7MRQO6DQ2EMYG
NEXT_PUBLIC_POKER_GAME_CONTRACT=CC7VLQ76WDUNDTTNXMXFUJTI2CC64HRZMFKRROCGDYKBISCM6NJDI4SJ

# Source Address for Contract Calls
# This is the address that deployed the contracts
NEXT_PUBLIC_SOURCE_ADDRESS=your-source-address-here

# AI Opponent Bot
# Public key for AI opponent (used in game display)
NEXT_PUBLIC_AI_BOT_ADDRESS=your-ai-bot-address-here
# IMPORTANT: Keep this secret! Only use server-side (API routes)
# AI_BOT_SECRET_KEY=SA4QOLZJTJYRMR4ZSKD5CQRT3UO4ZLJUNXVQWITD76JRHL7FRTKO4ZOK

# Game Hub Integration
# CRITICAL: Disabled for AI opponent mode (bot cannot sign transactions)
# Game Hub requires BOTH players to authorize transactions
# Set to true ONLY when implementing PvP (two real players with wallets)
NEXT_PUBLIC_ENABLE_GAME_HUB=true

# Zero-Knowledge Proofs
# Enable real ZK proof generation (requires compiled circuits)
NEXT_PUBLIC_ENABLE_ZK_PROOFS=true
NEXT_PUBLIC_CIRCUIT_PATH=/circuits/target

# Game Configuration (as per texas.md)
NEXT_PUBLIC_SMALL_BLIND=10
NEXT_PUBLIC_BIG_BLIND=20
NEXT_PUBLIC_STARTING_CHIPS=1000
NEXT_PUBLIC_ACTION_TIMEOUT_SECONDS=30

# Development
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_MOCK_WALLET=false
